<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
	<!-- mapper namespace는 비우면 에러 -->
	<!-- namespace의 값은 중복x -->
	<!-- 해당 mapper를 사용할 DAO의 풀패키지명으로 작성 -->
	<mapper namespace="com.winter.app.product.ProductDAO">
		<insert id="add" parameterType="ProductDTO">
			INSERT INTO PRODUCT
			VALUES(
			PRODUCT_SEQ.NEXVAL,
			#{productName},
			#{productContents},
			#{productRate},
			#{productJumsu}
			)
		</insert>
		
		<select id="getList" resultType="ProductDTO" parameterType="Pager">
			SELECT * FROM
			(SELECT ROWNUM R, P.* FROM
			(SELECT * FROM PRODUCT BY PRODUCTNUM DESC) P)
			WHERE R BETWEEN #{startRow}, #{lastRow}
		</select>
  
	</mapper>